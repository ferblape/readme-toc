{
  "manifest_version": 3,
  "name": "GitHub README TOC",
  "version": "1.0.0",
  "description": "Adds a table of contents navigation to GitHub README files",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  }
}
